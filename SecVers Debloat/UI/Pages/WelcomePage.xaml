<Page x:Class="SecVers_Debloat.UI.Pages.WelcomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SecVers_Debloat.UI.Pages"
      xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
      xmlns:ikw="http://schemas.inkore.net/lib/ui/wpf"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="WelcomePage">

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" 
                     HorizontalScrollBarVisibility="Disabled"
                     Padding="40,30">
            <StackPanel MaxWidth="600">

                <!-- Header Section -->
                <StackPanel HorizontalAlignment="Center" Margin="0,0,0,30">
                    <TextBlock Text="Welcome to SecVers Debloat" 
                              FontSize="32" 
                              FontWeight="Bold"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,8"/>

                    <TextBlock Text="Optimize your Windows 11 experience" 
                              FontSize="16" 
                              Opacity="0.7"
                              HorizontalAlignment="Center"/>

                    <!-- Version Badge -->
                    <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                           CornerRadius="12"
                           Padding="12,6"
                           Margin="0,15,0,0"
                           HorizontalAlignment="Center">
                        <TextBlock Text="Version 1.0.0" 
                                  FontSize="12"
                                  FontWeight="SemiBold"
                                  Opacity="0.8"/>
                    </Border>
                </StackPanel>
                <!-- Warning Card -->
                <Border Background="{DynamicResource SystemFillColorCautionBackgroundBrush}"
                       BorderBrush="{DynamicResource SystemFillColorCautionBrush}"
                       BorderThickness="1"
                       CornerRadius="8"
                       Padding="16"
                       Margin="0,0,0,30">
                    <StackPanel Orientation="Horizontal">
                        <ui:FontIcon Glyph="&#xE7BA;" 
                                    FontSize="20"
                                    Foreground="{DynamicResource SystemFillColorCautionBrush}"
                                    Margin="0,0,12,0"
                                    VerticalAlignment="Center"/>
                        <StackPanel>
                            <TextBlock Text="Use at Your Own Risk" 
                                      FontWeight="SemiBold"
                                      FontSize="14"
                                      Margin="0,0,0,4"/>
                            <TextBlock Text="This tool modifies system settings. Create a restore point before proceeding."
                                      FontSize="13"
                                      TextWrapping="Wrap"
                                      Opacity="0.9"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Restore Point -->
                <Border Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                       BorderBrush="{DynamicResource SystemAccentBrush}"
                       BorderThickness="1"
                       CornerRadius="8"
                       Padding="20"
                       Margin="0,0,0,30">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <ui:FontIcon Grid.Column="0"
                                    Glyph="&#xE777;" 
                                    FontSize="32"
                                    Foreground="{DynamicResource SystemAccentBrush}"
                                    Margin="0,0,20,0"
                                    VerticalAlignment="Center"/>

                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="System Protection" 
                                      FontSize="16"
                                      FontWeight="SemiBold"
                                      Margin="0,0,0,4"/>
                            <TextBlock x:Name="TxtRestorePointStatus"
                                      Text="Create a restore point before making changes"
                                      FontSize="13"
                                      Opacity="0.7"
                                      TextWrapping="Wrap"/>
                        </StackPanel>

                        <Button Grid.Column="2"
                                  x:Name="BtnCreateRestorePoint"
                                  Content="Create Now"
                                  Style="{StaticResource AccentButtonStyle}"
                                  Padding="20,10"
                                  VerticalAlignment="Center"
                                  Click="BtnCreateRestorePoint_Click">

                        </Button>
                    </Grid>
                </Border>
                <!-- Features Grid -->
                <TextBlock Text="What You Can Do" 
                          FontSize="20" 
                          FontWeight="SemiBold"
                          Margin="0,0,0,16"/>

                <Grid Margin="0,0,0,30">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Feature Card 1: Debloat -->
                    <Border Grid.Row="0" Grid.Column="0"
                           Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                           CornerRadius="8"
                           Padding="20"
                           Margin="0,0,0,16">
                        <StackPanel>
                            <ui:FontIcon Glyph="&#xE74D;" 
                                        FontSize="24"
                                        Foreground="{DynamicResource SystemAccentBrush}"
                                        Margin="0,0,0,12"/>
                            <TextBlock Text="Remove Bloatware" 
                                      FontSize="15"
                                      FontWeight="SemiBold"
                                      Margin="0,0,0,6"/>
                            <TextBlock Text="Clean up pre-installed apps and services"
                                      FontSize="13"
                                      Opacity="0.7"
                                      TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>

                    <!-- Feature Card 2: Software Installer -->
                    <Border Grid.Row="0" Grid.Column="2"
                           Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                           CornerRadius="8"
                           Padding="20"
                           Margin="0,0,0,16">
                        <StackPanel>
                            <ui:FontIcon Glyph="&#xE896;" 
                                        FontSize="24"
                                        Foreground="{DynamicResource SystemAccentBrush}"
                                        Margin="0,0,0,12"/>
                            <TextBlock Text="Install Software" 
                                      FontSize="15"
                                      FontWeight="SemiBold"
                                      Margin="0,0,0,6"/>
                            <TextBlock Text="Quick install popular programs"
                                      FontSize="13"
                                      Opacity="0.7"
                                      TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>

                    <!-- Feature Card 3: Security Hardening -->
                    <Border Grid.Row="1" Grid.Column="0"
                           Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                           CornerRadius="8"
                           Padding="20">
                        <StackPanel>
                            <ui:FontIcon Glyph="&#xE72E;" 
                                        FontSize="24"
                                        Foreground="{DynamicResource SystemAccentBrush}"
                                        Margin="0,0,0,12"/>
                            <TextBlock Text="Security Options" 
                                      FontSize="15"
                                      FontWeight="SemiBold"
                                      Margin="0,0,0,6"/>
                            <TextBlock Text="Configure Defender and hardening settings"
                                      FontSize="13"
                                      Opacity="0.7"
                                      TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>

                    <!-- Feature Card 4: Community Scripts -->
                    <Border Grid.Row="1" Grid.Column="2"
                           Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                           CornerRadius="8"
                           Padding="20">
                        <StackPanel>
                            <ui:FontIcon Glyph="&#xE943;" 
                                        FontSize="24"
                                        Foreground="{DynamicResource SystemAccentBrush}"
                                        Margin="0,0,0,12"/>
                            <TextBlock Text="Community Scripts" 
                                      FontSize="15"
                                      FontWeight="SemiBold"
                                      Margin="0,0,0,6"/>
                            <TextBlock Text="Run custom PowerShell scripts"
                                      FontSize="13"
                                      Opacity="0.7"
                                      TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- System Info Card -->
                <Border Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                       CornerRadius="8"
                       Padding="20"
                       Margin="0,0,0,24">
                    <StackPanel>
                        <TextBlock Text="System Information" 
                                  FontSize="16"
                                  FontWeight="SemiBold"
                                  Margin="0,0,0,12"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" 
                                      Text="OS Version:" 
                                      Opacity="0.7"
                                      Margin="0,0,0,8"/>
                            <TextBlock x:Name="TxtOSVersion"
                                      Grid.Row="0" Grid.Column="1" 
                                      Text="Windows 11 Pro"
                                      FontWeight="SemiBold"
                                      Margin="0,0,0,8"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" 
                                      Text="Build Number:" 
                                      Opacity="0.7"
                                      Margin="0,0,0,8"/>
                            <TextBlock x:Name="TxtBuildNumber"
                                      Grid.Row="1" Grid.Column="1" 
                                      Text="22631"
                                      FontWeight="SemiBold"
                                      Margin="0,0,0,8"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" 
                                      Text="Architecture:" 
                                      Opacity="0.7"/>
                            <TextBlock x:Name="TxtArchitecture"
                                      Grid.Row="2" Grid.Column="1" 
                                      Text="x64"
                                      FontWeight="SemiBold"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Action Buttons -->
                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,24">
                    <Button x:Name="BtnQuickStart"
                              Content="Quick Start Preset"
                              Style="{StaticResource AccentButtonStyle}"
                              Padding="24,12"
                              Margin="0,0,12,0"
                              Click="BtnQuickStart_Click">

                    </Button>

                    <Button x:Name="BtnDocumentation"
                              Content="Documentation"
                              Padding="24,12"
                              Click="BtnDocumentation_Click">

                    </Button>
                </StackPanel>

                <!-- Footer -->
                <StackPanel HorizontalAlignment="Center" Opacity="0.6">
                    <TextBlock HorizontalAlignment="Center" Margin="0,0,0,8">
                        <Run Text="Made with ❤️ by the SecVers team"/>
                    </TextBlock>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <ui:HyperlinkButton Content="GitHub" 
                                          NavigateUri="https://github.com/yourusername/secvers-debloat"
                                          Margin="0,0,16,0"/>
                        <ui:HyperlinkButton Content="Report Issue" 
                                          NavigateUri="https://github.com/yourusername/secvers-debloat/issues"/>
                    </StackPanel>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
