<Page x:Class="SecVers_Debloat.UI.Pages.DebloatPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SecVers_Debloat.UI.Pages"
      xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
      xmlns:ikw="http://schemas.inkore.net/lib/ui/wpf"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="680"
      Title="Debloat">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15" HorizontalAlignment="Left">
            <TextBlock Text="App Manager &amp; components" 
                       FontSize="28" 
                       HorizontalAlignment="Left"
                       FontWeight="Bold"/>
            <TextBlock Text="Manage installed applications and deep system components." 
                       FontSize="14" 
                       HorizontalAlignment="Left"
                       Margin="0,5,0,0"/>
        </StackPanel>
        <TabControl Grid.Row="1" Style="{StaticResource {x:Static ui:ThemeKeys.TabControlPivotStyleKey}}">
            <TabItem Header="Installed Apps">
                <Grid Margin="0,10,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="90"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="TxtSearch" 
                                 ui:ControlHelper.PlaceholderText="Search application..."
                                 TextChanged="TxtSearch_TextChanged"
                                 VerticalAlignment="Center"/>

                        <!-- Refresh Button -->
                        <Button x:Name="BtnRefresh" 
                                Content="Refresh List" 
                                Click="BtnRefreshApps_Click" 
                                Margin="10,0,0,0"
                                Grid.Column="1"/>
                    </Grid>

                    <!-- DataGrid -->
                    <Grid Grid.Row="1">
                        <DataGrid x:Name="DgInstalledApps"
                          AutoGenerateColumns="False"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          CanUserResizeRows="False"
                          CanUserSortColumns="True"
                          RowHeaderWidth="0"
                          BorderThickness="1"
                          VirtualizingPanel.IsVirtualizing="True"
                          VirtualizingPanel.VirtualizationMode="Recycling"
                           
                          SelectionMode="Single"
                          SelectionUnit="FullRow" CanUserResizeColumns="False">
                            <DataGrid.Columns>
                                <DataGridTemplateColumn Header="Select" Width="120" IsReadOnly="False">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox IsChecked="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                                      HorizontalAlignment="Center" 
                                                      VerticalAlignment="Center"
                                                      HorizontalContentAlignment="Center"
                                                      VerticalContentAlignment="Center"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="Application Name" 
                                                    Binding="{Binding DisplayName}" 
                                                    Width="*" 
                                                    IsReadOnly="True"/>

                                <DataGridTextColumn Header="Publisher" 
                                                    Binding="{Binding Publisher}" 
                                                    Width="200" 
                                                    IsReadOnly="True"/>

                                <DataGridTextColumn Header="Install Date" 
                                                    Binding="{Binding InstallDate}" 
                                                    Width="120" 
                                                    IsReadOnly="True"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- Loading Spinner Overlay -->
                        <Grid x:Name="LoadingLayer" Background="#7FFFFFFF" Visibility="Collapsed" 
                              HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                            <ui:ProgressRing IsActive="True" Width="50" Height="50" 
                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                    </Grid>

                    <!-- Action Bar -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="2">
                        <TextBlock x:Name="TxtAppCount" 
                                   Text="Ready to scan." 
                                   VerticalAlignment="Center" 
                                   Foreground="Gray" 
                                   Margin="0,0,15,0"/>

                        <Button x:Name="BtnUninstall" 
                                Content="Uninstall Selected" 
                                Click="BtnUninstallSelected_Click"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <TabItem Header="Core Components">
                <Grid Margin="0,10,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="60"/>
                    </Grid.RowDefinitions>
                    <!-- Checkbox List -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalContentAlignment="Stretch" Height="272" Grid.RowSpan="2" VerticalAlignment="Top">
                        <StackPanel HorizontalAlignment="Stretch">
                            <!-- Edge -->
                            <CheckBox x:Name="ChkEdge" Content="Microsoft Edge" FontSize="16" FontWeight="SemiBold"  HorizontalContentAlignment="Stretch" HorizontalAlignment="Stretch">
                                <CheckBox.ToolTip>
                                    <TextBlock Text="Removes Edge files, stops services, and blocks execution via Registry."/>
                                </CheckBox.ToolTip>
                            </CheckBox>
                            <!-- OneDrive -->
                            <CheckBox x:Name="ChkOneDrive" Content="Microsoft OneDrive" FontSize="16" FontWeight="SemiBold"  HorizontalContentAlignment="Stretch" HorizontalAlignment="Stretch">
                                <CheckBox.ToolTip>
                                    <TextBlock Text="Uninstalls OneDrive globally and wipes data folders."/>
                                </CheckBox.ToolTip>
                            </CheckBox>
                            <CheckBox x:Name="ChkCortana" Content="Cortana" FontSize="16" FontWeight="SemiBold"  HorizontalContentAlignment="Stretch" HorizontalAlignment="Stretch">
                                <CheckBox.ToolTip>
                                    <TextBlock Text="Disables Cortana via Policy and removes App Packages."/>
                                </CheckBox.ToolTip>
                            </CheckBox>
                        </StackPanel>
                    </ScrollViewer>

                    <Button Grid.Row="2" Content="Execute Selected Actions" 
                            HorizontalAlignment="Right"
                            Click="BtnExecuteCore_Click" Margin="0,10,10,0" VerticalAlignment="Top"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Page>
