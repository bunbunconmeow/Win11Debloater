<Window x:Class="SecVers_Debloat.UI.Popup.Telemetry_Popup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SecVers_Debloat.UI.Popup"
        xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
        xmlns:ikw="http://schemas.inkore.net/lib/ui/wpf" xmlns:ui1="http://schemas.microsoft.com/netfx/2009/xaml/presentation"
        ui:WindowHelper.UseModernWindowStyle="True"
        ui:WindowHelper.SystemBackdropType="Mica"
        ResizeMode="NoResize"
        mc:Ignorable="d"
        Height="450" Width="360"
        Title="Allow Telemetry" WindowStyle="None">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Icon & Title -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,20">
           

            <TextBlock Text="Help Improve SecVers Debloat" 
                      FontSize="22" 
                      FontWeight="SemiBold"
                      HorizontalAlignment="Center"
                      TextWrapping="Wrap"
                      TextAlignment="Center"/>
        </StackPanel>

        <!-- Description -->
        <TextBlock Grid.Row="1" 
                  TextWrapping="Wrap" 
                  FontSize="14"
                  Opacity="0.8"
                  LineHeight="22"
                  Margin="0,0,0,25">
            <Run Text="We collect anonymous usage data to improve the application. This includes:"/>
        </TextBlock>

        <!-- Features List -->
        <Border Grid.Row="2" 
                Background="{DynamicResource ControlFillColorDefaultBrush}"
                CornerRadius="8"
                Padding="20,15"
                Margin="0,0,0,25">
            <StackPanel>
                <!-- Feature Item 1 -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                   
                    <TextBlock Text="System Name"
                              TextWrapping="Wrap"
                              VerticalAlignment="Center"
                              FontSize="13"/>
                </StackPanel>

                <!-- Feature Item 2 -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                    
                    <TextBlock Text="Operating System Information"
                              TextWrapping="Wrap"
                              VerticalAlignment="Center"
                              FontSize="13"/>
                </StackPanel>

                <!-- Feature Item 3 -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                    
                    <TextBlock Text="Operating system version"
                              TextWrapping="Wrap"
                              VerticalAlignment="Center"
                              FontSize="13"/>
                </StackPanel>

                <!-- Privacy Notice -->
                <Border Background="{DynamicResource ControlAltFillColorTertiaryBrush}"
                        CornerRadius="6"
                        Padding="12,10"
                        Margin="0,10,0,0">
                    <StackPanel Orientation="Horizontal">
                       
                        <TextBlock Text="No personal information is collected"
                                  FontSize="12"
                                  FontStyle="Italic"
                                  Opacity="0.8"
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>

        <!-- Info Text -->
        <TextBlock Grid.Row="3" 
                  TextWrapping="Wrap" 
                  FontSize="12"
                  Opacity="0.7"
                  Margin="0,0,0,20"
                  HorizontalAlignment="Center"
                  TextAlignment="Center">
            <Run Text="You can change this setting later in the application settings."/>
        </TextBlock>

        <!-- Action Buttons -->
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" 
                      Content="No, Thanks" 
                      Click="BtnDecline_Click"
                      Height="40"
                      FontSize="14"
                      HorizontalAlignment="Stretch"/>

            <Button Grid.Column="2" 
                      Content="Allow Telemetry" 
                      Click="BtnAllow_Click"
                      Style="{DynamicResource AccentButtonStyle}"
                      Height="40"
                      FontSize="14"
                      HorizontalAlignment="Stretch"/>
        </Grid>
    </Grid>
</Window>
